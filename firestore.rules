rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı profilleri
    // NOT: Bu oyun uygulamasında hassas veri yok, bu nedenle
    // authenticated olan HER kullanıcı kendi /users/{username} dokümanını
    // rahatça okuyup yazabilsin diye kuralları basitleştiriyoruz.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    // Kullanıcı adına göre query yapabilmek için (giriş sırasında mevcut kullanıcıyı bulmak için)
    // NOT: Bu rule collection seviyesinde query yapabilmek için gerekli
    // Query'de zaten where('username', '==', username) filtresi var, bu yüzden güvenli
    match /users/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Kullanıcı istatistikleri
    // NOT: Bu oyun uygulamasında hassas veri yok, bu nedenle
    // authenticated olan HER kullanıcı kendi /user_stats/{username} dokümanını
    // rahatça okuyup yazabilsin diye kuralları basitleştiriyoruz.
    match /user_stats/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Günlük görevler
    // Aynı şekilde, sadece giriş yapmış olmak yeterli.
    match /daily_tasks/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Haftalık görevler
    match /weekly_tasks/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Kullanıcı muvaffakiyetleri (rozetler)
    match /user_achievements/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Basit rapor (kullanıcı özeti)
    match /user_reports/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Günlük istatistikler
    match /daily_stats/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Haftalık istatistikler
    match /weekly_stats/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Aylık istatistikler
    match /monthly_stats/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Haftalık liderlik tablosu
    match /weekly_leaderboard/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Kelime istatistikleri - anonymous kullanıcılar da erişebilir
    // Query yaparken user_id field'ına göre filtreleme yapıldığı için,
    // Rules'da query'ler için authenticated kullanıcılara erişim ver
    // Doküman seviyesinde user_id kontrolü yap
    match /word_stats/{docId} {
      // Query'ler için: authenticated kullanıcılar collection'a erişebilir
      // (query'de user_id filtresi olduğu için sadece kendi verilerini görecekler)
      allow read: if request.auth != null;
      // Write için: user_id kontrolü yap
      allow write: if request.auth != null && 
        (docId.startsWith(request.auth.uid + '_') || 
         (request.resource != null && request.resource.data.user_id == request.auth.uid));
    }
    
    // Favoriler - anonymous kullanıcılar da erişebilir
    match /favorites/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (docId.startsWith(request.auth.uid + '_') || 
         (request.resource != null && request.resource.data.user_id == request.auth.uid));
    }
    
    // Başarımlar - anonymous kullanıcılar da erişebilir
    match /achievements/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (docId.startsWith(request.auth.uid + '_') || 
         (request.resource != null && request.resource.data.user_id == request.auth.uid));
    }
    
    // Rozetler - anonymous kullanıcılar da erişebilir
    match /badges/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (docId.startsWith(request.auth.uid + '_') || 
         (request.resource != null && request.resource.data.user_id == request.auth.uid));
    }
  }
}
